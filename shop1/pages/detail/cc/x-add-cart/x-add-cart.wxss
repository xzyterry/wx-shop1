.container {
  height: 75rpx;
  display: flex;
  box-shadow: 0 -1px 1px rgba(100, 100, 100, 0.2);
  position: fixed;
  bottom: 0px;
  left: 0rpx;
  right: 0rpx;
}

.item {
  flex: 1;
}

.icon-cart {
  width: 44rpx;
  height: 44rpx;
  margin: 15rpx;
}

.btn-add {
  border-radius: 20rpx;
  width: 90%;
  height: 80%;
  margin: 7rpx;
  background-color: #ff5777;
  vertical-align: middle;
  text-align: center;
  line-height: 30px;
}
