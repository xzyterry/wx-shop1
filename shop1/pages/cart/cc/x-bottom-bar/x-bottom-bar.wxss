.bottom-bar{
  display: flex;
  height: 88rpx;
  background: #eee;
  padding-left: 30rpx;
  box-shadow: 0 -2px 2px rgba(0, 0, 0, .1);
  align-items: center;
  font-size: 28rpx;

  position: fixed;
  bottom: 0;
  left: 0;
  right: 0

}

.checkbox{
  display: flex;
  width: 150rpx;
  align-items: center
}

.total{
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.pay{
  width: 200rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #ff5777;
  color: #fff;
  text-align: center;
}

.icon {
  margin-right: 10rpx;
}

